#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Users/aoi15/work/house-dashboard-pwa/node_modules/.pnpm/sass@1.97.3/node_modules/sass/node_modules:/mnt/c/Users/aoi15/work/house-dashboard-pwa/node_modules/.pnpm/sass@1.97.3/node_modules:/mnt/c/Users/aoi15/work/house-dashboard-pwa/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/Users/aoi15/work/house-dashboard-pwa/node_modules/.pnpm/sass@1.97.3/node_modules/sass/node_modules:/mnt/c/Users/aoi15/work/house-dashboard-pwa/node_modules/.pnpm/sass@1.97.3/node_modules:/mnt/c/Users/aoi15/work/house-dashboard-pwa/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../sass/sass.js" "$@"
else
  exec node  "$basedir/../sass/sass.js" "$@"
fi
